{
  "name": "vite-vue-electron-demo",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "start cmd /k pnpm vite:dev && pnpm elec:dev",
    "build":"pnpm vite:build && pnpm builder",
    "elec:dev": "electron .",
    "vite:dev": "pnpm -r vite:dev",
    "vite:build:hot": "pnpm -r build:hot",
    "vite:build": "pnpm -r build",
    "builder": "electron-builder build"
  },

  "build": {
    "productName": "vite-vue-electron",
    "appId": "com.vite.vue.electron",
    "copyright": "diehunter",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "win": {
      "target": [{
        "target": "nsis",
        "arch": [
          "ia32"
        ]
      }]
    }
  },
  "devDependencies": {
    "electron": "^20.1.3",
    "electron-builder": "^23.6.0",
    "electron-reload": "2.0.0-alpha.1"
  }
}